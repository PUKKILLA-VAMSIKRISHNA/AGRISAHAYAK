{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    { "src": "/images/(.*)", "dest": "/static/images/$1" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(robots.txt|sitemap.xml|favicon.ico|favicon.png)", "dest": "/static/images/$1" },
    { "src": "/(.*)", "dest": "/main.py" }
  ],
  "env": {
    "PYTHONPATH": ".",
    "FLASK_ENV": "production"
  }
}